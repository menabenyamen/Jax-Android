<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_workitem"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/workitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="85dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="title"
        android:textColor="#353535"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/workitem_statusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/workitem_title"
        android:layout_alignParentRight="true"
        android:width="80dp"
        android:background="#cecdcb"
        android:gravity="right"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/workitem_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workitem_title"
        android:text="Description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/assigned_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/workitem_description"
        android:text="'@assignee'" />

</RelativeLayout>