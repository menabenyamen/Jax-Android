<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.criminal.menabenyamen.taskr.activity.UpdateTeamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/update_team_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="16dp"
            android:hint=" write your assignee"
            android:layout_margin="10dp"/>

          <EditText
            android:id="@+id/update_team_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="16dp"
            android:hint="new team name"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/update_btn_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update Team"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>
